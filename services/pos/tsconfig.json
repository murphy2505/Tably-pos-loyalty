{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": ["node", "jest"]
  },
  "include": ["src"],
  "exclude": [
    "dist",
    "src/controllers/menuItemsController.ts",
    "src/services/menuItemService.ts",
    "src/services/menuService.ts",
    "src/routes/revenueGroups.ts"
  ]
}
